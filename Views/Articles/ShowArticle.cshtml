@model Articles_UserBased.Models.Article

    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.Category.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.Author.UserName)
        </td>
        <td>
            @if (User.IsInRole("Administrator") || Model.Author?.Id == ViewData["CurrentUserId"].ToString())
            {
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
            }
            |
            @if (User.IsInRole("Administrator") || Model.Author?.Id == ViewData["CurrentUserId"].ToString())
            {
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
            }
            |
            @Html.ActionLink("Details", "Details", new { id = Model.Id })
        </td>
    </tr>

